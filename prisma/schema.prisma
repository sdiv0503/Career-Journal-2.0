generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// MODEL 1: The User
model User {
  id        String   @id // Matches Clerk ID
  email     String   @unique
  name      String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Gamification Fields (New for v2.0)
  xp        Int      @default(0)
  level     Int      @default(1)
  streak    Int      @default(0)
  lastLogDate DateTime? // To track daily streaks

  // Relations
  entries   Entry[]
  resumes   Resume[]
  badges    Badge[]   // New Relation
}

model Badge {
  id          String   @id @default(uuid())
  name        String
  description String
  icon        String   // We will store the Lucide icon name here
  awardedAt   DateTime @default(now())
  
  userId      String
  user        User     @relation(fields: [userId], references: [id])
}

// MODEL 2: The Journal Entry
model Entry {
  id        String   @id @default(uuid())
  userId    String
  title     String
  content   String   @db.Text
  date      DateTime
  mood      String   @default("Neutral")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation to User
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// MODEL 3: The Resume
model Resume {
  id             String   @id @default(uuid())
  userId         String
  content        String   @db.Text 
  fileName       String
  status         String   @default("analyzing")
  
  // NEW: Store the JD text used for comparison
  jobDescription String?  @db.Text 
  
  analysis       Json?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
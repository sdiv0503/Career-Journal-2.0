generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// MODEL 1: The User
model User {
  id        String   @id // Managed by Clerk
  email     String   @unique
  name      String?
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  // Relations
  entries   Entry[]
  resumes   Resume[] // <--- THIS LINE WAS MISSING OR INVALID
}

// MODEL 2: The Journal Entry
model Entry {
  id        String   @id @default(uuid())
  userId    String
  title     String
  content   String   @db.Text
  date      DateTime
  mood      String   @default("Neutral")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation to User
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// MODEL 3: The Resume
model Resume {
  id        String   @id @default(uuid())
  userId    String
  content   String   @db.Text // The extracted text
  fileName  String
  status    String   @default("analyzing")

  // NEW: Store the AI result here. 
  // We use String (serialized JSON) or Json type if your DB supports it.
  // Neon/Postgres supports Json type perfectly.
  analysis  Json?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation to User
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}